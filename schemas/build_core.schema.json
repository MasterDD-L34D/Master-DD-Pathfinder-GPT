{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pathfinder-master-dd/schemas/build_core.schema.json",
  "title": "Master DD build payload (core)",
  "type": "object",
  "required": [
    "build_id",
    "build_state",
    "benchmark",
    "export",
    "reference_catalog_version",
    "step_audit"
  ],
  "properties": {
    "build_id": {
      "$ref": "#/$defs/build_id"
    },
    "build_state": {
      "$ref": "#/$defs/build_state"
    },
    "benchmark": {
      "$ref": "#/$defs/benchmark"
    },
    "export": {
      "$ref": "#/$defs/export"
    },
    "catalog_references": {
      "$ref": "#/$defs/catalog_references"
    },
    "narrative": {
      "$ref": "#/$defs/textual_block"
    },
    "sheet": {
      "$ref": "#/$defs/textual_block"
    },
    "ledger": {
      "$ref": "#/$defs/ledger"
    },
    "class": {
      "type": [
        "string",
        "null"
      ],
      "description": "Nome della classe richiesta"
    },
    "mode": {
      "type": [
        "string",
        "null"
      ],
      "description": "Mode richiesto (core/extended/full-pg)"
    },
    "source_url": {
      "type": [
        "string",
        "null"
      ],
      "format": "uri"
    },
    "reference_catalog_version": {
      "$ref": "#/$defs/reference_catalog_version"
    },
    "fetched_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "request": {
      "type": "object",
      "properties": {
        "class": {
          "type": [
            "string",
            "null"
          ]
        },
        "mode": {
          "type": [
            "string",
            "null"
          ]
        },
        "race": {
          "type": [
            "string",
            "null"
          ]
        },
        "archetype": {
          "type": [
            "string",
            "null"
          ]
        },
        "spec_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "model": {
          "type": [
            "string",
            "null"
          ]
        },
        "background": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "query_params": {
      "type": "object",
      "additionalProperties": true
    },
    "body_params": {
      "type": "object",
      "additionalProperties": true
    },
    "step_audit": {
      "$ref": "#/$defs/step_audit"
    },
    "created_at": {
      "$ref": "#/$defs/timestamp"
    },
    "updated_at": {
      "$ref": "#/$defs/timestamp"
    },
    "status": {
      "$ref": "#/$defs/build_status"
    },
    "validation_status": {
      "$ref": "#/$defs/validation_status"
    },
    "reviewed_by": {
      "$ref": "#/$defs/reviewer"
    },
    "completeness": {
      "$ref": "#/$defs/completeness"
    },
    "composite": {
      "$ref": "#/$defs/composite"
    },
    "audit": {
      "$ref": "#/$defs/audit_log"
    },
    "record_status": {
      "$ref": "#/$defs/record_status"
    },
    "is_deleted": {
      "type": "boolean",
      "default": false
    },
    "deleted_at": {
      "$ref": "#/$defs/timestamp"
    }
  },
  "$defs": {
    "build_id": {
      "type": "string",
      "minLength": 1,
      "description": "Identificatore univoco della build (PK logica per snapshot e ledger)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "record_status": {
      "type": "string",
      "enum": [
        "draft",
        "validated",
        "archived"
      ],
      "description": "Stato del record nel data lake (diverso dallo stato funzionale della build)"
    },
    "reviewer": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1,
      "description": "Identificativo/revisore umano o processo che ha validato la build"
    },
    "build_status": {
      "type": "string",
      "enum": [
        "draft",
        "in_review",
        "approved",
        "rejected"
      ]
    },
    "validation_status": {
      "type": "string",
      "enum": [
        "pending",
        "passed",
        "failed"
      ]
    },
    "catalog_references": {
      "type": "array",
      "description": "Lista di voci catalogate usate dalla build (feat/incantesimi/oggetti)",
      "items": {
        "type": "object",
        "required": [
          "source_id",
          "type"
        ],
        "properties": {
          "source_id": {
            "type": "string",
            "minLength": 1,
            "description": "Identificativo dell'entry in data/reference (FK logica)"
          },
          "type": {
            "type": "string",
            "enum": [
              "feat",
              "spell",
              "item",
              "other"
            ]
          },
          "name": {
            "type": [
              "string",
              "null"
            ],
            "description": "Nome dell'entry catalogata (ridondante per coerenza)"
          }
        },
        "additionalProperties": false
      }
    },
    "reference_catalog_version": {
      "type": "string",
      "const": "2026.04.03",
      "description": "Versione del catalogo RAW/SRD usato per la build, deve corrispondere a data/reference/manifest.json"
    },
    "build_state": {
      "type": "object",
      "required": [
        "class",
        "mode",
        "step",
        "step_total",
        "step_labels"
      ],
      "properties": {
        "class": {
          "type": "string",
          "minLength": 1
        },
        "mode": {
          "$ref": "#/$defs/build_mode"
        },
        "race": {
          "type": [
            "string",
            "null"
          ]
        },
        "archetype": {
          "type": [
            "string",
            "null"
          ]
        },
        "step": {
          "type": "integer",
          "minimum": 1
        },
        "step_total": {
          "type": "integer",
          "minimum": 1
        },
        "step_labels": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            "^[0-9]+$": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "step_labels_count": {
          "type": "integer",
          "minimum": 0
        },
        "version": {
          "type": [
            "string",
            "null"
          ]
        },
        "statistics": {
          "type": [
            "object",
            "null"
          ],
          "description": "Statistiche sintetiche calcolate sul personaggio",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "benchmark": {
      "type": "object",
      "required": [
        "meta_tier"
      ],
      "properties": {
        "meta_tier": {
          "type": "string",
          "minLength": 1
        },
        "ruling_badge": {
          "type": [
            "string",
            "null"
          ]
        },
        "statistics": {
          "type": [
            "object",
            "null"
          ],
          "description": "Metriche chiave per il benchmarking",
          "additionalProperties": true
        },
        "dpr_snapshot": {
          "type": "object",
          "patternProperties": {
            "^livello_[0-9]+$": {
              "type": "object",
              "properties": {
                "media": {
                  "type": [
                    "number",
                    "integer"
                  ]
                },
                "picco": {
                  "type": [
                    "number",
                    "integer"
                  ]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "missing_catalog_entries": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Voci di catalogo richieste dalla scheda ma assenti dal reference locale"
        },
        "ledger_unknown_entries": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Elementi nel ledger non riconosciuti dal catalogo di riferimento"
        },
        "ledger_sheet_mismatches": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Disallineamenti tra ledger e scheda derivati dal controllo di catalogo"
        },
        "prerequisite_violations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Prerequisiti RAW/SRD non soddisfatti per le scelte effettuate"
        },
        "catalog_version": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Snapshot del catalogo di riferimento usato durante la validazione"
        },
        "notes": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "export": {
      "type": "object",
      "properties": {
        "sheet_payload": {
          "type": [
            "object",
            "null"
          ],
          "description": "Sheet payload completo, quando disponibile",
          "additionalProperties": true
        },
        "sheet_locale": {
          "type": [
            "string",
            "null"
          ]
        },
        "sheet_format": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "textual_block": {
      "type": [
        "string",
        "object",
        "array",
        "null"
      ]
    },
    "ledger": {
      "oneOf": [
        {
          "$ref": "#/$defs/textual_block"
        },
        {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "movimenti": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "voce",
                  "importo"
                ],
                "properties": {
                  "voce": {
                    "type": "string",
                    "minLength": 1
                  },
                  "importo": {
                    "type": [
                      "number",
                      "integer"
                    ]
                  },
                  "categoria": {
                    "type": [
                      "string",
                      "null"
                    ]
                  }
                },
                "additionalProperties": false
              }
            },
            "saldo": {
              "type": [
                "number",
                "integer",
                "null"
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "step_audit": {
      "type": "object",
      "required": [
        "request_timestamp",
        "client_fingerprint_hash",
        "outcome",
        "attempt_count",
        "backoff_reason"
      ],
      "properties": {
        "request_timestamp": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "Timestamp ISO8601 della richiesta che ha generato o negato la build"
        },
        "client_fingerprint_hash": {
          "type": "string",
          "minLength": 32,
          "description": "Hash (es. SHA-256) della chiave API o fingerprint client usato per la richiesta"
        },
        "request_ip": {
          "type": [
            "string",
            "null"
          ],
          "description": "IP pubblico visto dal backend al momento della richiesta"
        },
        "outcome": {
          "type": "string",
          "enum": [
            "accepted",
            "denied",
            "backoff"
          ],
          "description": "Esito della richiesta rispetto ai gate di autenticazione/backoff"
        },
        "attempt_count": {
          "type": "integer",
          "minimum": 1,
          "description": "Conteggio dei tentativi consecutivi per quella chiave/IP al momento della decisione"
        },
        "backoff_reason": {
          "type": [
            "string",
            "null"
          ],
          "description": "Motivazione del backoff applicato (null se non applicato)"
        },
        "normalized_mode": {
          "type": [
            "string",
            "null"
          ]
        },
        "expected_step_total": {
          "type": [
            "integer",
            "null"
          ]
        },
        "observed_step_total": {
          "type": [
            "integer",
            "null"
          ]
        },
        "step_total_ok": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "step_labels_count": {
          "type": [
            "integer",
            "null"
          ]
        },
        "has_extended_steps": {
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "audit_entry": {
      "type": "object",
      "required": [
        "timestamp",
        "actor",
        "action"
      ],
      "properties": {
        "timestamp": {
          "$ref": "#/$defs/timestamp"
        },
        "actor": {
          "type": "string",
          "minLength": 1
        },
        "action": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "$ref": "#/$defs/record_status"
        },
        "note": {
          "type": [
            "string",
            "null"
          ]
        },
        "checkpoint": {
          "type": [
            "integer",
            "null"
          ]
        },
        "source": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "audit_log": {
      "type": "array",
      "description": "Trail cronologico di modifiche/import delle build",
      "items": {
        "$ref": "#/$defs/audit_entry"
      }
    },
    "completeness": {
      "type": "object",
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "require_complete": {
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "build_mode": {
      "type": "string",
      "enum": [
        "core",
        "extended",
        "full-pg"
      ]
    },
    "build_bundle": {
      "type": "object",
      "required": [
        "build_id",
        "build_state",
        "benchmark",
        "export",
        "reference_catalog_version",
        "step_audit"
      ],
      "properties": {
        "build_id": {
          "$ref": "#/$defs/build_id"
        },
        "build_state": {
          "$ref": "#/$defs/build_state"
        },
      "benchmark": {
        "$ref": "#/$defs/benchmark"
      },
      "export": {
        "$ref": "#/$defs/export"
      },
      "reference_catalog_version": {
        "$ref": "#/$defs/reference_catalog_version"
      },
      "step_audit": {
        "$ref": "#/$defs/step_audit"
      },
      "catalog_references": {
        "$ref": "#/$defs/catalog_references"
      },
      "sheet_payload": {
        "type": [
          "object",
          "null"
        ],
          "description": "Sheet payload completo, quando disponibile",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "composite": {
      "type": "object",
      "required": [
        "build"
      ],
      "properties": {
        "build": {
          "$ref": "#/$defs/build_bundle"
        },
        "narrative": {
          "$ref": "#/$defs/textual_block"
        },
        "sheet": {
          "$ref": "#/$defs/textual_block"
        },
        "sheet_payload": {
          "$ref": "scheda_pg.schema.json"
        },
        "ledger": {
          "$ref": "#/$defs/ledger"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
