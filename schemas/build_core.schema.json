{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pathfinder-master-dd/schemas/build_core.schema.json",
  "title": "Master DD build payload (core)",
  "type": "object",
  "required": [
    "build_state",
    "benchmark",
    "export",
    "reference_catalog_version"
  ],
  "properties": {
    "build_state": {
      "$ref": "#/$defs/build_state"
    },
    "benchmark": {
      "$ref": "#/$defs/benchmark"
    },
    "export": {
      "$ref": "#/$defs/export"
    },
    "narrative": {
      "$ref": "#/$defs/textual_block"
    },
    "sheet": {
      "$ref": "#/$defs/textual_block"
    },
    "ledger": {
      "$ref": "#/$defs/ledger"
    },
    "class": {
      "type": [
        "string",
        "null"
      ],
      "description": "Nome della classe richiesta"
    },
    "mode": {
      "type": [
        "string",
        "null"
      ],
      "description": "Mode richiesto (core/extended/full-pg)"
    },
    "source_url": {
      "type": [
        "string",
        "null"
      ],
      "format": "uri"
    },
    "reference_catalog_version": {
      "$ref": "#/$defs/reference_catalog_version"
    },
    "fetched_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "request": {
      "type": "object",
      "properties": {
        "class": {
          "type": [
            "string",
            "null"
          ]
        },
        "mode": {
          "type": [
            "string",
            "null"
          ]
        },
        "race": {
          "type": [
            "string",
            "null"
          ]
        },
        "archetype": {
          "type": [
            "string",
            "null"
          ]
        },
        "spec_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "model": {
          "type": [
            "string",
            "null"
          ]
        },
        "background": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "query_params": {
      "type": "object",
      "additionalProperties": true
    },
    "body_params": {
      "type": "object",
      "additionalProperties": true
    },
    "step_audit": {
      "$ref": "#/$defs/step_audit"
    },
    "completeness": {
      "$ref": "#/$defs/completeness"
    },
    "composite": {
      "$ref": "#/$defs/composite"
    }
  },
  "$defs": {
    "reference_catalog_version": {
      "type": "string",
      "const": "2026.03.22",
      "description": "Versione del catalogo RAW/SRD usato per la build, deve corrispondere a data/reference/manifest.json"
    },
    "build_state": {
      "type": "object",
      "required": [
        "class",
        "mode",
        "step",
        "step_total",
        "step_labels"
      ],
      "properties": {
        "class": {
          "type": "string",
          "minLength": 1
        },
        "mode": {
          "$ref": "#/$defs/build_mode"
        },
        "race": {
          "type": [
            "string",
            "null"
          ]
        },
        "archetype": {
          "type": [
            "string",
            "null"
          ]
        },
        "step": {
          "type": "integer",
          "minimum": 1
        },
        "step_total": {
          "type": "integer",
          "minimum": 1
        },
        "step_labels": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            "^[0-9]+$": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "step_labels_count": {
          "type": "integer",
          "minimum": 0
        },
        "version": {
          "type": [
            "string",
            "null"
          ]
        },
        "statistics": {
          "type": [
            "object",
            "null"
          ],
          "description": "Statistiche sintetiche calcolate sul personaggio",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "benchmark": {
      "type": "object",
      "required": [
        "meta_tier"
      ],
      "properties": {
        "meta_tier": {
          "type": "string",
          "minLength": 1
        },
        "ruling_badge": {
          "type": [
            "string",
            "null"
          ]
        },
        "statistics": {
          "type": [
            "object",
            "null"
          ],
          "description": "Metriche chiave per il benchmarking",
          "additionalProperties": true
        },
        "dpr_snapshot": {
          "type": "object",
          "patternProperties": {
            "^livello_[0-9]+$": {
              "type": "object",
              "properties": {
                "media": {
                  "type": [
                    "number",
                    "integer"
                  ]
                },
                "picco": {
                  "type": [
                    "number",
                    "integer"
                  ]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "notes": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "export": {
      "type": "object",
      "properties": {
        "sheet_payload": {
          "type": [
            "object",
            "null"
          ],
          "description": "Sheet payload completo, quando disponibile",
          "additionalProperties": true
        },
        "sheet_locale": {
          "type": [
            "string",
            "null"
          ]
        },
        "sheet_format": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "textual_block": {
      "type": [
        "string",
        "object",
        "array",
        "null"
      ]
    },
    "ledger": {
      "oneOf": [
        {
          "$ref": "#/$defs/textual_block"
        },
        {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "movimenti": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "voce",
                  "importo"
                ],
                "properties": {
                  "voce": {
                    "type": "string",
                    "minLength": 1
                  },
                  "importo": {
                    "type": [
                      "number",
                      "integer"
                    ]
                  },
                  "categoria": {
                    "type": [
                      "string",
                      "null"
                    ]
                  }
                },
                "additionalProperties": false
              }
            },
            "saldo": {
              "type": [
                "number",
                "integer",
                "null"
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "step_audit": {
      "type": "object",
      "properties": {
        "normalized_mode": {
          "type": [
            "string",
            "null"
          ]
        },
        "expected_step_total": {
          "type": [
            "integer",
            "null"
          ]
        },
        "observed_step_total": {
          "type": [
            "integer",
            "null"
          ]
        },
        "step_total_ok": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "step_labels_count": {
          "type": [
            "integer",
            "null"
          ]
        },
        "has_extended_steps": {
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "completeness": {
      "type": "object",
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "require_complete": {
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "build_mode": {
      "type": "string",
      "enum": [
        "core",
        "extended",
        "full-pg"
      ]
    },
    "build_bundle": {
      "type": "object",
      "required": [
        "build_state",
        "benchmark",
        "export",
        "reference_catalog_version"
      ],
      "properties": {
        "build_state": {
          "$ref": "#/$defs/build_state"
        },
        "benchmark": {
          "$ref": "#/$defs/benchmark"
        },
        "export": {
          "$ref": "#/$defs/export"
        },
        "reference_catalog_version": {
          "$ref": "#/$defs/reference_catalog_version"
        },
        "sheet_payload": {
          "type": [
            "object",
            "null"
          ],
          "description": "Sheet payload completo, quando disponibile",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "composite": {
      "type": "object",
      "required": [
        "build"
      ],
      "properties": {
        "build": {
          "$ref": "#/$defs/build_bundle"
        },
        "narrative": {
          "$ref": "#/$defs/textual_block"
        },
        "sheet": {
          "$ref": "#/$defs/textual_block"
        },
        "sheet_payload": {
          "$ref": "scheda_pg.schema.json"
        },
        "ledger": {
          "$ref": "#/$defs/ledger"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
