{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pathfinder-master-dd/schemas/build_full_pg.schema.json",
  "title": "Master DD build payload (full-PG)",
  "type": "object",
  "required": [
    "build_id",
    "build_state",
    "benchmark",
    "export",
    "sheet_payload",
    "composite",
    "reference_catalog_version",
    "step_audit"
  ],
  "properties": {
    "build_id": {
      "$ref": "build_core.schema.json#/$defs/build_id"
    },
    "build_state": {
      "$ref": "build_core.schema.json#/$defs/build_state"
    },
    "benchmark": {
      "$ref": "build_core.schema.json#/$defs/benchmark"
    },
    "export": {
      "$ref": "build_core.schema.json#/$defs/export"
    },
    "narrative": {
      "$ref": "build_core.schema.json#/$defs/textual_block"
    },
    "sheet": {
      "$ref": "build_core.schema.json#/$defs/textual_block"
    },
    "reference_catalog_version": {
      "$ref": "build_core.schema.json#/$defs/reference_catalog_version"
    },
    "step_audit": {
      "$ref": "build_core.schema.json#/$defs/step_audit"
    },
    "sheet_payload": {
      "$ref": "scheda_pg.schema.json",
      "description": "Contesto opzionale per il template scheda_pg_markdown_template.md"
    },
    "ledger": {
      "$ref": "build_core.schema.json#/$defs/ledger"
    },
    "composite": {
      "type": "object",
      "required": [
        "build"
      ],
      "properties": {
        "build": {
          "allOf": [
            {
              "$ref": "build_core.schema.json#/$defs/build_bundle"
            },
            {
              "type": "object",
              "required": [
                "sheet_payload"
              ],
              "properties": {
                "sheet_payload": {
                  "$ref": "scheda_pg.schema.json",
                  "description": "Contesto opzionale per il template scheda_pg_markdown_template.md"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "narrative": {
          "$ref": "build_core.schema.json#/$defs/textual_block"
        },
        "sheet": {
          "$ref": "build_core.schema.json#/$defs/textual_block"
        },
        "sheet_payload": {
          "$ref": "scheda_pg.schema.json",
          "description": "Contesto opzionale per il template scheda_pg_markdown_template.md"
        },
        "ledger": {
          "$ref": "build_core.schema.json#/$defs/ledger"
        }
      },
      "anyOf": [
        {
          "required": [
            "narrative"
          ]
        },
        {
          "required": [
            "sheet"
          ]
        },
        {
          "required": [
            "ledger"
          ]
        }
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
