{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pathfinder-master-dd/schemas/reference_catalog.schema.json",
  "title": "Catalogo di riferimento RAW/SRD",
  "type": "array",
  "items": {
    "$ref": "#/$defs/reference_entry"
  },
  "uniqueItems": true,
  "minItems": 1,
  "$defs": {
    "reference_entry": {
      "type": "object",
      "required": [
        "name",
        "source",
        "source_id",
        "prerequisites",
        "tags",
        "references",
        "reference_urls"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Nome normalizzato dell'oggetto di catalogo"
        },
        "source": {
          "type": "string",
          "minLength": 1,
          "description": "Fonte RAW/SRD di riferimento"
        },
        "source_id": {
          "type": "string",
          "minLength": 1,
          "description": "Identificativo normalizzato e univoco della fonte o dell'entry"
        },
        "prerequisites": {
          "type": "array",
          "description": "Prerequisiti testuali richiesti per usare l'elemento",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true,
          "default": []
        },
        "category": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "feat",
            "spell",
            "item",
            "other",
            null
          ],
          "description": "Categoria analitica della voce catalogo"
        },
        "edition": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1,
          "description": "Edizione o snapshot RAW/SRD di riferimento (es. 1E/2E)"
        },
        "references": {
          "type": "array",
          "description": "Citazioni RAW/SRD a supporto dell'elemento",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "reference_urls": {
          "type": "array",
          "description": "URL SRD/d20pfsrd che l'assistente deve citare come fonte primaria",
          "items": {
            "type": "string",
            "format": "uri",
            "minLength": 1
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "notes": {
          "type": "string",
          "description": "Annotazioni libere opzionali"
        },
        "created_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "Timestamp di creazione della voce catalogo"
        },
        "updated_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "Timestamp di ultima modifica"
        },
        "status": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "draft",
            "in_review",
            "approved",
            "rejected",
            null
          ],
          "description": "Stato di workflow della voce catalogo"
        },
        "validation_status": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "pending",
            "passed",
            "failed",
            null
          ],
          "description": "Esito della validazione o QA sulla voce catalogo"
        },
        "reviewed_by": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1,
          "description": "Revisore (umano o processo) che ha approvato la voce"
        }
      }
    }
  }
}
