{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pathfinder-master-dd/schemas/module_metadata.schema.json",
  "title": "Master DD module metadata",
  "type": "object",
  "required": [
    "name",
    "size_bytes",
    "suffix"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "size_bytes": {
      "type": "integer",
      "minimum": 0
    },
    "suffix": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "record_status": {
      "$ref": "#/$defs/record_status"
    },
    "audit": {
      "$ref": "#/$defs/audit_log"
    },
    "is_deleted": {
      "type": "boolean",
      "default": false
    },
    "deleted_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "compatibility": {
      "oneOf": [
        { "$ref": "#/$defs/compatibility_target" },
        {
          "type": "array",
          "items": { "$ref": "#/$defs/compatibility_target" },
          "minItems": 1
        },
        { "type": "string" }
      ],
      "description": "Compatibilit√† dichiarata con piattaforme/versioni, normalizzata su target/version/notes"
    }
  },
  "$defs": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "record_status": {
      "type": "string",
      "enum": [
        "draft",
        "validated",
        "archived"
      ]
    },
    "audit_entry": {
      "type": "object",
      "required": ["timestamp", "actor", "action"],
      "properties": {
        "timestamp": { "$ref": "#/$defs/timestamp" },
        "actor": { "type": "string", "minLength": 1 },
        "action": { "type": "string", "minLength": 1 },
        "status": { "$ref": "#/$defs/record_status" },
        "note": { "type": ["string", "null"] },
        "source": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "audit_log": {
      "type": "array",
      "items": { "$ref": "#/$defs/audit_entry" }
    },
    "compatibility_target": {
      "type": "object",
      "required": ["target"],
      "properties": {
        "target": {
          "type": "string",
          "enum": [
            "foundry",
            "vtt_generic",
            "pdf",
            "cli",
            "other"
          ]
        },
        "version": {
          "type": [
            "string",
            "null"
          ]
        },
        "notes": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
