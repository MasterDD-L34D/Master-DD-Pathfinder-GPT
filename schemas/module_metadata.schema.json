{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pathfinder-master-dd/schemas/module_metadata.schema.json",
  "title": "Master DD module metadata",
  "type": "object",
  "required": [
    "name",
    "size_bytes",
    "suffix"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "size_bytes": {
      "type": "integer",
      "minimum": 0
    },
    "suffix": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "compatibility": {
      "oneOf": [
        { "$ref": "#/$defs/compatibility_target" },
        {
          "type": "array",
          "items": { "$ref": "#/$defs/compatibility_target" },
          "minItems": 1
        },
        { "type": "string" }
      ],
      "description": "Compatibilit√† dichiarata con piattaforme/versioni, normalizzata su target/version/notes"
    }
  },
  "$defs": {
    "compatibility_target": {
      "type": "object",
      "required": ["target"],
      "properties": {
        "target": {
          "type": "string",
          "enum": [
            "foundry",
            "vtt_generic",
            "pdf",
            "cli",
            "other"
          ]
        },
        "version": {
          "type": [
            "string",
            "null"
          ]
        },
        "notes": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
