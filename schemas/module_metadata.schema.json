{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pathfinder-master-dd/schemas/module_metadata.schema.json",
  "title": "Master DD module metadata",
  "type": "object",
  "required": [
    "name",
    "size_bytes",
    "suffix"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "size_bytes": {
      "type": "integer",
      "minimum": 0
    },
    "suffix": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "compatibility": {
      "oneOf": [
        { "type": "string" },
        { "type": "object" },
        { "type": "array" }
      ]
    }
  },
  "additionalProperties": true
}
